{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "keyofStringsOnly": true,
        "sourceMap": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom",
            "esnext"
        ],
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "dist",
    ]
}
